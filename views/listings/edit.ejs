<% layout("/layouts/boilerplate" ) %>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>edit this listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
        enctype="multipart/form-data">

        <div class="mb-3">
          <lable for="title" class="form-lable">Title</lable>
          <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required />

          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <lable for="description" class="form-lable ">Add Description</lable>
          <textarea name="listing[description]" class="form-control" required>
    <%= listing.description %></textarea>
          <div class="invalid-feedback">
            enter a short description !
          </div>
        </div>


        <div class="mb-3">
          Original Image Preview <br/>
          <img src="<%= originalImageUrl %>" />
        </div>


        <div class="mb-3">
          <lable for="Image" class="form-lable ">upload image link</lable>
          <input name="listing[image]" value="<%= listing.image %>" type="file" class="form-control" />
        </div>



        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable ">Add Price</lable>
            <input name="listing[price]" value="<%= listing.price %>" class="form-control" required />
            <div class="invalid-feedback">
              enter a valid price !
            </div>
          </div>


          <div class="mb-3 col-md-8">
            <lable for="country" class="form-lable ">Add Country</lable>
            <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required />
            <div class="invalid-feedback">
              please enter a valid country!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-lable ">Add Location</lable>
          <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required />
          <div class="invalid-feedback">
            please enter a correct location
          </div>
        </div>


        <button class="btn btn-dark edit-btn mt-3">Edit</button>

      </form>
    </div>
  </div>
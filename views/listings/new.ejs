<% layout("/layouts/boilerplate"    ) %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input
          type="text"
          name="listing[title]"
          placeholder="enter your title name"
          class="form-control" 
          required
            />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
        
      <div class="mb-3">
          <lable for="description" class="form-lable ">Add Description</lable>
          <textarea
           name="listing[description]"
            class="form-control" 
            required
            ></textarea>
            <div class="invalid-feedback">
              enter a short description !
           </div>
        </div>
       

        <div class="mb-3">
          <lable for="Image" class="form-lable ">Upload Image</lable>
        <input
         name="listing[image]"
          placeholder="enter image URL/Link"
           type="file"
            class="form-control"
             required
             />
             <div class="invalid-feedback">
              Upload Image
           </div>
        </div>
   
         <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable ">Add Price</lable>
        <input
         name="listing[price]"
          placeholder="enter price" 
          class="form-control" 
          required
          />
          <div class="invalid-feedback">
             enter a valid price !
          </div>
       </div>

       <div class="mb-3 col-md-8">
        <lable for="country" class="form-lable ">Add Country</lable>
        <input
         name="listing[country]" 
         placeholder="enter country" 
         type="text"
          class="form-control"
           required
           />
           <div class="invalid-feedback">
               please enter a valid country!
         </div>
       </div>
      </div>

       <div class="mb-3">
        <lable for="location" class="form-lable ">Add Location</lable>
        <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">
        please enter a correct location
     </div>
         </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
